<h1><%= @user.nickname %>'s My Page</h1>
<p>ID: <%= @user.id %></p>
<p>Provider: <%= @user.provider %></p>
<p>Name: <%= link_to "#{@user.nickname}", user_path(@user.nickname) %></p>


<h2><%= @user.nickname %>'s NoteBook</h2>
<% @notes.each do |note| %>
  <p>Blend Name: <%= note.blendName %></p>
<% if note.coffee_image1? %>
  <%= image_tag note.coffee_image1.url, width: '240' %>
<% else %>
  <%= image_tag 'noimage.gif' %>
<% end %>
  <p>Date: <%= note.date %></p>
  <p>overall: <%= note.overall %></p>
  <p><%= link_to 'Detail', note_path(note.id) %>
  <hr>
<% end %>
