<h1><%= @note.blendName %></h1>
<% if logged_in? %>
  <% if @current_user.id == @note.user_id %>
    <p><%= link_to 'Edit', edit_note_path(@note) %></p>
    <p><%= link_to 'Delete', @note, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
<% end %>
<p>Blend Name: <%= @note.blendName %></p>
<% if @note.coffee_image1? %>
  <%= image_tag @note.coffee_image1.url, width: '240' %>
<% else %>
  <%= image_tag 'noimage.gif' %>
<% end %>
<p>Date: <%= @note.date %></p>
<p>User: <%= link_to "#{@user.nickname}", "/users/#{@user.nickname}" %></p>
<p>Origin: <%= @note.origin %></p>
<p>Place: <%= @note.place %></p>
<p>roast: <%= @note.roast %></p>
<p>dark: <%= @note.dark %></p>
<p>body: <%= @note.body %></p>
<p>flavor: <%= @note.flavor %></p>
<p>acidity: <%= @note.acidity %></p>
<p>sweetness: <%= @note.sweetness %></p>
<p>cleancup: <%= @note.cleancup %></p>
<p>aftertaste: <%= @note.aftertaste %></p>
<p>overall: <%= @note.overall %></p>
<p>comment: <%= @note.comment %></p>
<hr>
