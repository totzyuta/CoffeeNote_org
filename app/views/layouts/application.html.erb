<!DOCTYPE html>
<html>
<head>
  <title>CoffeeNote</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'style', media: 'all' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="pure-menu pure-menu-open pure-menu-horizontal">
      <%= link_to 'Coffee Note', '/', class: 'title pure-menu-heading' %>
      <ul>
        <% if logged_in? %>
          <!-- <p>User ID: <%= current_user.id %></p> -->
          <li><%= link_to image_tag(current_user.image_url, :size => "35x35"), user_path(current_user.nickname) %></li>
          <li><%= link_to current_user.nickname, user_path(current_user.nickname) %></li>
          <li><%= link_to 'My NoteBook', user_path(current_user.nickname) %></li>
          <li><%= link_to 'Create New Note', new_note_path %></li>
          <li><%= link_to 'Logout', logout_path %></li>
        <% else %>
          <p><%= link_to 'Login by Twitter', '/auth/twitter' %></p>
        <% end %>
        <p>tesafsdafawegwargwe</p>
      </ul>
    </div>
  </header>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>
  <hr>

  <%= yield %>

  <hr>
<%= link_to 'Back', :back %>

</body>
</html>
